            android:theme="@style/AppTheme" />

        <service
            android:name="es.incidence.core.manager.beacon.BeaconService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="location" />

        <receiver
            android:name="es.incidence.core.manager.beacon.RestartReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />

                <data android:scheme="es.incidence.core" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="incidence.BOOT_SERVICE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="es.incidence.core.manager.auto.AutoReceiver"
            android:enabled="true"
            android:exported="true" >
