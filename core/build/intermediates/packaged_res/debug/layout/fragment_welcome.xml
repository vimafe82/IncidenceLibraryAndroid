<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/colorPrimary"
    android:id="@+id/layoutRootWelcome">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <es.incidence.core.utils.view.ICirclePageIndicator
        android:id="@+id/circlePageIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="30dp"
        android:background="@android:color/transparent"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp"
        app:pageColor="@color/gray"
        app:fillColor="@android:color/white"
        app:centered="true"
        app:radius="4dp"
        android:layout_marginLeft="7.5dp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:id="@+id/layoutVideo"
        android:visibility="visible">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>

        <com.e510.commons.view.Hud
            android:id="@+id/hud"
            android:background="@color/incidencePrincipal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="104dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:id="@+id/layoutVideoClose">

            <ImageView
                android:id="@+id/menuClose"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_close"/>

            <ImageView
                android:id="@+id/videoMuteOn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_volume_on"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/videoMuteOff"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_volume_off"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/layoutVideoBackground">

            <ImageView
                android:id="@+id/videoBackground"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="120dp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>