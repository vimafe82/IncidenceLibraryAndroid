<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black600"
        android:textSize="16sp"
        android:lineHeight="26dp"
        android:text="@string/ask_valoration"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="44dp"
            android:id="@+id/layoutSlide">

            <SeekBar
                android:id="@+id/seekBar"
                android:max="4"
                android:progress="2"
                android:stepSize="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:thumb="@drawable/seekbar_thumb"
                android:thumbOffset="0dp"
                android:progressTint="@color/incidence500"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/valoration_face_very_bad"
                android:adjustViewBounds="true"
                android:id="@+id/imgValVeryBad"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/valoration_face_bad"
                android:adjustViewBounds="true"
                android:id="@+id/imgValBad"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/valoration_face_neutral"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imgValNeutral"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/valoration_face_good"
                android:adjustViewBounds="true"
                android:id="@+id/imgValGood"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/valoration_face_very_good"
                android:adjustViewBounds="true"
                android:id="@+id/imgValVeryGood"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"/>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>