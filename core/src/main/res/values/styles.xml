<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="SplashTheme" parent="AppThemeNoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="TextLabel">
        <item name="android:textColorHint">@color/black500</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black500</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="colorAccent">@color/black500</item>
        <item name="colorControlNormal">@color/black500</item>
        <item name="colorControlActivated">@color/black500</item>
        <item name="android:colorControlHighlight">@color/black500</item>
        <item name="colorControlHighlight">@color/black500</item>
    </style>

    <style name="TextLabelHint">
        <item name="android:textColor">@color/black500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PrimarySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/incidence500</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="ContentLoadingProgress">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
