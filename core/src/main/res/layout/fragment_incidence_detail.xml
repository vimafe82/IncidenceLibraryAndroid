<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:clickable="true"
    android:id="@+id/layoutRootIncidenceDetail"
    android:background="@color/incidence100">

    <es.incidence.core.utils.view.INavigation
        android:id="@+id/inavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/inavigation"
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal_medium"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:text="@string/name"
        android:textColor="@color/black500"
        android:textSize="12sp"
        android:lineHeight="22dp"/>

    <TextView
        android:layout_below="@+id/txtDate"
        android:layout_alignParentRight="true"
        android:id="@+id/txtStatus"
        android:layout_marginRight="@dimen/margin_normal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/incidence_status_closed"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:lineHeight="22dp"/>

    <TextView
        android:layout_below="@+id/txtDate"
        android:layout_toLeftOf="@+id/txtStatus"
        android:id="@+id/txtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:text="@string/name"
        android:textColor="@color/black600"
        android:textSize="14sp"
        android:lineHeight="24dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtAddress"
        android:layout_marginTop="@dimen/margin_normal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal">

            <LinearLayout
                android:id="@+id/layoutMessages"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_below="@+id/homeTitleBig"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                card_view:cardCornerRadius="8dp">

                <com.mapbox.mapboxsdk.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </androidx.cardview.widget.CardView>

            <es.incidence.core.utils.view.IButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="16dp"
                android:id="@+id/btnContinue"
                app:topTitle="@string/continuar"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutFace"
                android:visibility="gone"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/imgFace"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_face_good"/>

                <TextView
                    android:layout_toRightOf="@+id/imgFace"
                    android:id="@+id/txtFace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/name"
                    android:textColor="@color/black600"
                    android:textSize="14sp"
                    android:lineHeight="24dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_normal_double"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>