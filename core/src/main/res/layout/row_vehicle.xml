<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/car_black"
            android:id="@+id/imgVehicle"
            android:layout_centerVertical="true"/>


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgRight"
            android:src="@drawable/icon_arrow_down"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgVehicle"
            android:layout_toLeftOf="@+id/imgRight"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txtMatricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textColor="@color/black400"
                android:textSize="14sp"
                android:lineHeight="24dp"
                android:lines="1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMatricula"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="7dp"
                    android:id="@+id/imgCheck"
                    android:src="@drawable/beacon_black"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:id="@+id/txtName"
                    android:layout_toRightOf="@+id/imgCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/empty"
                    android:textColor="@color/black600"
                    android:textSize="20sp"
                    android:lineHeight="30dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>





</RelativeLayout>