<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true">


    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/layoutRowDelete"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/layoutRow"
        app:layout_constraintLeft_toRightOf="@+id/layoutRow"
        app:layout_constraintRight_toRightOf="@+id/layoutRow"
        app:layout_constraintBottom_toBottomOf="@+id/layoutRow">


        <TextView
            android:includeFontPadding="false"
            android:id="@+id/txtDeleteTitle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:lineHeight="24dp"/>


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_delete"
            android:id="@+id/imgDeleteLeft"
            android:layout_toLeftOf="@+id/txtDeleteTitle"
            android:layout_centerVertical="true"/>


    </RelativeLayout>
    <RelativeLayout
        android:clickable="true"
        android:id="@+id/layoutRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="@dimen/margin_normal_medium"
        android:layout_marginBottom="@dimen/margin_normal_medium"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_incidences"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/imgLeft"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="6.5dp"
            android:layout_height="11.5dp"
            android:id="@+id/imgRight"
            android:src="@drawable/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_alignBaseline="@+id/txtTitle"/>

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/txtTitle"
            android:layout_toRightOf="@+id/imgLeft"
            android:layout_toLeftOf="@+id/imgRight"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty"
            android:textColor="@color/black600"
            android:textSize="14sp"
            android:lineHeight="24dp"/>

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/txtSubtitle"
            android:layout_toRightOf="@+id/imgLeft"
            android:layout_toLeftOf="@+id/imgRight"
            android:layout_below="@+id/txtTitle"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty"
            android:textColor="@color/black600"
            android:textSize="14sp"
            android:lineHeight="24dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>