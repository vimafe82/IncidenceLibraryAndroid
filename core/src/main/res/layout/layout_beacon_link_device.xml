<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:id="@+id/layoutRoot"
    android:background="@color/incidence100">

    <RelativeLayout
        android:id="@+id/layoutHeader1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/txtHeaderVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black600"
            android:textSize="16sp"
            android:lineHeight="26dp"
            android:text="@string/select_vehicle_to_link"
            android:gravity="center" />

    </RelativeLayout>

    <ListView
        android:layout_below="@+id/layoutHeader1"
        android:layout_marginTop="@dimen/margin_normal"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:descendantFocusability="beforeDescendants" />

</RelativeLayout>