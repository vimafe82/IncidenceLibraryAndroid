<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="ThemeTransparent" parent="@style/Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ContentLoadingWhiteProgress">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <declare-styleable name="PrimaryField">
        <attr name="type" format="enum">
            <enum name="normal" value="0"/>
            <enum name="email" value="1"/>
            <enum name="password" value="2"/>
            <enum name="button" value="3"/>
            <enum name= "select" value="4"/>
            <enum name= "date" value="5"/>
        </attr>
        <attr name="topTitle" format="string"/>
        <attr name="hint" format="string"/>
        <attr name="radius" format="dimension"/>
        <attr name="drawableLeft" format="reference"/>
        <attr name="drawableRight" format="reference"/>
        <attr name="wrapped" format="boolean"/>
        <attr name="inputType" format="string"/>
    </declare-styleable>

    <declare-styleable name="SearchView">
        <attr name="searchHint" format="string"/>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="trimLength" format="integer"/>
    </declare-styleable>

    <declare-styleable name="StepView">
        <attr name="stepQuantity" format="integer"/>
        <attr name="stepPosition" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TouchImageView">
        <attr name="zoom_enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SearchableSpinner">
        <attr name="hintText" format="string"/>
    </declare-styleable>

    <style name="PrimarySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/greenSwitch</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="FloatLabeledEditText">
        <attr name="fletTextAppearance" format="reference" />
        <attr name="fletPadding" format="reference|dimension" />
        <attr name="fletPaddingLeft" format="reference|dimension" />
        <attr name="fletPaddingTop" format="reference|dimension" />
        <attr name="fletPaddingRight" format="reference|dimension" />
        <attr name="fletPaddingBottom" format="reference|dimension" />
        <attr name="fletBackground" format="reference|color" />
    </declare-styleable>
    <declare-styleable name="BottomSheetLayout">
        <attr format="dimension" name="collapsedHeight"/>
    </declare-styleable>
    <declare-styleable name="SwipeButton">
        <attr format="dimension" name="swipeButtonHeight"/>
    </declare-styleable>

    <style name="ContentLoadingProgress">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
