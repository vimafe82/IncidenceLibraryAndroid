<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="SplashTheme" parent="AppThemeNoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="TextLabel">
        <item name="android:textColorHint">@color/black500</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black500</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="colorAccent">@color/black500</item>
        <item name="colorControlNormal">@color/black500</item>
        <item name="colorControlActivated">@color/black500</item>
        <item name="android:colorControlHighlight">@color/black500</item>
        <item name="colorControlHighlight">@color/black500</item>
    </style>

    <style name="TextLabelHint">
        <item name="android:textColor">@color/black500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PrimarySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/incidence500</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="ContentLoadingProgress">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <declare-styleable name="PrimaryField">
        <attr name="type" format="enum">
            <enum name="normal" value="0"/>
            <enum name="email" value="1"/>
            <enum name="password" value="2"/>
            <enum name="button" value="3"/>
            <enum name= "select" value="4"/>
            <enum name= "date" value="5"/>
        </attr>
        <attr name="topTitle" format="string"/>
        <attr name="hint" format="string"/>
        <attr name="radius" format="dimension"/>
        <attr name="drawableLeft" format="reference"/>
        <attr name="drawableRight" format="reference"/>
        <attr name="wrapped" format="boolean"/>
        <attr name="inputType" format="string"/>
    </declare-styleable>

    <declare-styleable name="SearchView">
        <attr name="searchHint" format="string"/>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="trimLength" format="integer"/>
    </declare-styleable>

    <declare-styleable name="StepView">
        <attr name="stepQuantity" format="integer"/>
        <attr name="stepPosition" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TouchImageView">
        <attr name="zoom_enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SearchableSpinner">
        <attr name="hintText" format="string"/>
    </declare-styleable>

    <style name="ContentLoadingWhiteProgress">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <declare-styleable name="CirclePageIndicator"><attr name="centered"/><attr format="color" name="fillColor"/><attr format="color" name="pageColor"/><attr name="android:orientation"/><attr format="dimension" name="radius"/><attr format="boolean" name="snap"/><attr format="color" name="strokeColor"/><attr name="strokeWidth"/><attr name="android:background"/></declare-styleable>
</resources>
