<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutInsuListRoot"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/incidence100">

    <es.incidence.core.utils.view.IField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/field"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"/>

    <ListView
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/field"
        android:id="@+id/listView"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:descendantFocusability="afterDescendants">
    </ListView>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_normal"
        android:layout_alignParentBottom="true"
        android:id="@+id/viewMargin"/>

    <es.incidence.core.utils.view.IButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:id="@+id/btnAddInsurance"
        app:topTitle="@string/add_insurance"
        android:visibility="gone"
        android:layout_above="@+id/viewMargin"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/field"
        android:layout_above="@+id/btnAddInsurance"
        android:id="@+id/scrollInsuranceNotFound">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal_double"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:gravity="center"
                android:text="@string/insurance_not_found_desc"
                android:textSize="16sp"
                android:lineHeight="26dp"
                android:textColor="@color/black600"
                android:id="@+id/txtNotFound"
                android:visibility="gone"/>

            <es.incidence.core.utils.view.IField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_new"
                android:layout_below="@+id/txtNotFound"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:visibility="gone"/>




        </RelativeLayout>

    </ScrollView>



</RelativeLayout>