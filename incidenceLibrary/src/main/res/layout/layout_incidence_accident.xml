<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black600"
        android:textSize="16sp"
        android:lineHeight="26dp"
        android:text="@string/ask_wounded"/>

    <include
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="7dp"
        android:layout_below="@+id/txtTitle"
        layout="@layout/row_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1" />

    <include
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_below="@+id/layout1"
        layout="@layout/row_separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1separator" />

    <include
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_below="@+id/layout1separator"
        layout="@layout/row_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2" />

    <include
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_below="@+id/layout2"
        layout="@layout/row_separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2separator" />

</RelativeLayout>