<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/layoutNaviRoot">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_normal">

        <ImageView
            android:id="@+id/naviImgBack"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="@dimen/margin_normal_medium"
            android:layout_width="17dp"
            android:layout_height="12.4dp"
            android:src="@drawable/icon_left_arrow"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@+id/naviImgBack"
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black600"
            android:textSize="16sp"
            android:lineHeight="20dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="74dp"
        android:layout_height="10dp"
        android:id="@+id/naviClickBack"/>

</RelativeLayout>