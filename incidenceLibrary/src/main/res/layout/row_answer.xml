<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/checkbox_off"
        android:id="@+id/check1"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/check1"
        android:id="@+id/txtCheck1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black600"
        android:textSize="14sp"
        android:lineHeight="24dp"
        android:layout_marginLeft="@dimen/margin_field"
        android:text="@string/valoration_bad_spec_one"/>

</RelativeLayout>