<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:id="@+id/layoutRoot"
    android:background="@color/incidence100">

    <RelativeLayout
        android:id="@+id/layoutHeader1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="@dimen/margin_normal_double">

        <TextView
            android:id="@+id/txtHeaderVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:lineHeight="26dp"
            android:text="@string/select_beacon_type"
            android:textColor="@color/black600"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutHeader1"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imgLeft"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:src="@drawable/dispositivo_red" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_toRightOf="@+id/imgLeft"
            android:includeFontPadding="false"
            android:lineHeight="26dp"
            android:text="@string/select_beacon_type_iot"
            android:textColor="@color/black600"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imgRight"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_normal"
            android:clickable="false"
            android:src="@drawable/icon_arrow_down" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey300"
        android:layout_below="@+id/layoutRow"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal" />

    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutRow"
        android:orientation="vertical"
        android:id="@+id/layoutRow1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:paddingLeft="@dimen/margin_normal"
            android:id="@+id/layoutRow11">

            <ImageView
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_qr"
                android:id="@+id/imgLeft1"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/txtTitle1"
                android:layout_toRightOf="@+id/imgLeft1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_beacon_type_qr"
                android:textColor="@color/black600"
                android:textSize="16sp"
                android:lineHeight="26dp"
                android:layout_marginLeft="@dimen/margin_normal"
                android:includeFontPadding="false"/>

            <ImageView
                android:id="@+id/imgRight1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_normal"
                android:src="@drawable/icon_info" />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey300"
            android:layout_below="@+id/layoutRow1"
            android:layout_marginLeft="@dimen/margin_normal_double"
            android:layout_marginRight="@dimen/margin_normal"
            android:paddingLeft="@dimen/margin_normal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:paddingLeft="@dimen/margin_normal"
            android:id="@+id/layoutRow12">

            <ImageView
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_imei"
                android:id="@+id/imgLeft12"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/txtTitle12"
                android:layout_toRightOf="@+id/imgLeft12"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_beacon_imei"
                android:textColor="@color/black600"
                android:textSize="16sp"
                android:lineHeight="26dp"
                android:layout_marginLeft="@dimen/margin_normal"
                android:includeFontPadding="false"/>

            <ImageView
                android:id="@+id/imgRight12"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_normal"
                android:src="@drawable/icon_info" />
        </RelativeLayout>
        <View
            android:visibility="visible"
            android:id="@+id/line12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey300"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"/>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_below="@id/layoutRow1"
        android:id="@+id/layoutRow2">

        <ImageView
            android:id="@+id/imgLeft2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:src="@drawable/dispositivo_blue" />

        <TextView
            android:id="@+id/txtTitle2"
            android:layout_toRightOf="@+id/imgLeft2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_beacon_type_smart"
            android:textColor="@color/black600"
            android:textSize="16sp"
            android:lineHeight="26dp"
            android:layout_marginLeft="@dimen/margin_normal"
            android:includeFontPadding="false"/>

        <ImageView
            android:id="@+id/imgRight2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_normal"
            android:clickable="false"
            android:src="@drawable/icon_arrow_down" />
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey300"
        android:layout_below="@+id/layoutRow2"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal" />

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:paddingLeft="@dimen/margin_normal"
        android:layout_below="@id/line2"
        android:id="@+id/layoutRow21">

        <ImageView
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_bluetooth"
            android:id="@+id/imgLeft21"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txtTitle21"
            android:layout_toRightOf="@+id/imgLeft21"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_beacon_type_bluetooth"
            android:textColor="@color/black600"
            android:textSize="16sp"
            android:lineHeight="26dp"
            android:layout_marginLeft="@dimen/margin_normal"
            android:includeFontPadding="false"/>
    </RelativeLayout>

    <View
        android:visibility="gone"
        android:id="@+id/line21"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey300"
        android:layout_below="@+id/layoutRow21"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtOmitir3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:gravity="center"
            android:lineHeight="20dp"
            android:text="@string/omitir"
            android:textColor="@color/incidence500"
            android:textSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_normal_double"
            android:layout_below="@+id/txtOmitir3"
            android:id="@+id/viewMargin"/>

    </RelativeLayout>

</RelativeLayout>