<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">

    <ImageView
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:src="@drawable/home_circle2"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgCircle"/>

    <TextView
        android:layout_below="@+id/imgCircle"
        android:id="@+id/txtTitle"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black600"
        android:textSize="24sp"
        android:lineHeight="34dp"
        android:text="@string/report_ask_what"
        android:gravity="center"/>

    <TextView
        android:layout_below="@+id/txtTitle"
        android:id="@+id/txtDescription"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black500"
        android:textSize="14sp"
        android:lineHeight="24dp"
        android:text="@string/report_ask_what_descrip"
        android:gravity="center"/>


</RelativeLayout>