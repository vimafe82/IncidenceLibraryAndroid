<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/imgView"/>


    <com.e510.commons.view.PrimaryButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin_triple"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_double"
        android:layout_marginRight="@dimen/activity_horizontal_margin_double"
        android:id="@+id/btn"
        app:topTitle="@string/onboarding_button_start"
        android:visibility="gone"/>

</RelativeLayout>